<div class="new-game-form-container">
  <%= form_for @game do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Add New Game', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
